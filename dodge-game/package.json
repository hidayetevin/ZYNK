  "devDependencies": {
    "@capacitor/cli": "^5.7.8",
    "@capacitor/core": "^5.7.8",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.0"
  }
